<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Title Block -->
    <title>{% block title %}AubergeGeorgio{% endblock %}</title>

    <!-- Hotwired Turbo Script for SPA-like functionality -->
    <script type="module">
        import { Turbo } from '@hotwired/turbo';
        Turbo.start();
    </script>

    <!-- Favicon -->
    <link rel="icon" href="{{ asset('images/logoR.svg') }}">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Jacques+Francois&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Jacques+Francois+Shadow&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Italianno&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">

    <!-- Webpack Encore CSS Entries -->
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
    <!-- Flash Messages Block -->
    {% for type, messages in app.flashes %}
        <div class="alert alert-{{ type }}">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endfor %}

    <!-- Main Body Content Block -->
    {% block body %}{% endblock %}

    <!-- JavaScript Blocks -->
    {% block javascripts %}
        <!-- Webpack Encore JS Entries -->
        {{ encore_entry_script_tags('app') }}

        <!-- Import Map for Modules -->
        <script type="importmap">
            {
                "imports": {
                    "vue": "https://unpkg.com/vue@3.5.9/dist/vue.esm-browser.js",
                    "bootstrap": "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js",
                    "your-custom-module": "/assets/app.js"
                }
            }
        </script>

        <!-- Bootstrap JS Bundle -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

        <!-- Custom JavaScript -->
        <script src="{{ asset('build/app.js') }}" defer></script>

        <!-- jQuery Library -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    {% endblock %}
</body>
</html>
