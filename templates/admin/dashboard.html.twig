{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="table-responsive">
        <h1 class="bg-success text-white p-3 text-center">Gestion des Réservations</h1>
        
        <div class="d-flex justify-content-center">
            {% if bookingStatus %}
                <p class="text-center bold">Les réservations sont actuellement {{ bookingStatus.canBook ? 'activées' : 'désactivées' }}.</p>
            {% else %}
                <p>Aucun statut de réservation trouvé.</p>
            {% endif %}

            <a href="{{ path('toggle_booking_status') }}" class="btn btn-success p-3 text-center">
                {{ bookingStatus.canBook ? 'Désactiver les Réservations' : 'Activer les Réservations' }}
            </a>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th class="d-none d-md-table-cell">Téléphone</th>
                    <th class="d-none d-md-table-cell">Email</th>
                    <th>Nombre de Personnes</th>
                    <th class="d-none d-md-table-cell">Date</th>
                    <th class="d-none d-md-table-cell">Motif</th>
                    <th class="d-none d-md-table-cell">Demande Spéciale</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for booking in bookings %}
                    <tr>
                        <td>{{ booking.id }}</td>
                        <td>{{ booking.name }}</td>
                        <td class="d-none d-md-table-cell">{{ booking.phoneNumber }}</td>
                        <td class="d-none d-md-table-cell">{{ booking.email }}</td>
                        <td>{{ booking.nbGuest }}</td>
                        <td>{{ booking.date|date('d/m/Y H:i') }}</td>
                        <td class="d-none d-md-table-cell">{{ booking.motif ?: 'Aucun' }}</td> <!-- Affichage du motif -->
                        <td class="d-none d-md-table-cell">{{ booking.specialRequest ?: 'Aucune' }}</td>
                        <td>
                            {% if booking.isVerified is null %}
                                <span class="badge bg-warning text-dark">En attente</span>
                            {% elseif booking.isVerified %}
                                <span class="badge bg-success">Acceptée</span>
                            {% else %}
                                <span class="badge bg-danger">Refusée</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if booking.isVerified is null %}
                                <a href="{{ path('admin_confirm_booking', {'id': booking.id}) }}" class="btn btn-success btn-sm">Accepter</a>
                                <a href="{{ path('admin_deny_booking', {'id': booking.id}) }}" class="btn btn-danger btn-sm">Refuser</a>
                            {% else %}
                                <button class="btn btn-secondary btn-sm" disabled>Action non disponible</button>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center">Aucune réservation en attente.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}