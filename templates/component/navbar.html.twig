{% extends 'base.html.twig' %}
{% block body %}

<nav class="navbar">
    <div class="container">
        <!-- Logo de navigation -->
        <div class="logo">
            <a href="{{ path('home') }}"><img src="{{ asset('images/logoR.svg') }}" alt="Logo"></a>
        </div>

        <!-- Menu burger -->
        <div class="burger">
            <div class="line line1"></div>
            <div class="line line2"></div>
            <div class="line line3"></div>
        </div>

        <!-- Menu de navigation -->
        <ul class="nav-links">
            <li><a href="{{ path('home') }}">Accueil</a></li>
            <li><a href="{{ path('category') }}">Menu</a></li>
            <li><a href="{{ path('services') }}">Services</a></li>
            <li><a href="{{ path('contact') }}">Contact</a></li>
        </ul>
    </div>
</nav>

<script>
    // Sélection des éléments du menu burger et de navigation
    const burger = document.querySelector('.burger');
    const navLinks = document.querySelector('.nav-links');

    burger.addEventListener('click', () => {
        // Toggle l'affichage du menu burger
        navLinks.classList.toggle('nav-active');
        burger.classList.toggle('toggle');
    });

    // Fermer le menu burger lorsque l'utilisateur clique sur un lien du menu
    document.querySelectorAll('.nav-links a').forEach(link => {
        link.addEventListener('click', () => {
            navLinks.classList.remove('nav-active');
            burger.classList.remove('toggle');
        });
    });

    // Sticky navbar lors du défilement
    window.addEventListener('scroll', function() {
        const navbar = document.querySelector('.navbar');
        if (window.scrollY > 50) {
            navbar.classList.add('sticky');
        } else {
            navbar.classList.remove('sticky');
        }
    });
</script>

{% endblock %}